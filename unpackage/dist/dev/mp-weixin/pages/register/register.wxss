
form > span {
  display: flex;
  flex-direction: column;
  justify-content: center; /* 水平方向居中对齐 */
  align-items: center;
}
form >span> view {
  display: flex;
  align-items: center;
  margin: 10px;
  width: 50%;
}
form >span > view > text {
  margin-right: 10px;
  white-space: nowrap;
}

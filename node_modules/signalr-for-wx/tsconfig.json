{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "noEmitOnError": true,
    "lib": ["es5", "esnext"],
    "declarationDir": "./typings",
    "typeRoots": ["./library"],
    "sourceMap": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "extendedDiagnostics": true,
    "strict": false,
    "stripInternal": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "pretty": true
  },
  "include": ["./wx/**/*"]
}

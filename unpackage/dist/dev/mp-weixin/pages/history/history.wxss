.rowlayout{
  display: flex;
  flex-direction: row;
}
.columnlayout{
  display: flex;
  flex-direction: column;height: 200rpx;
  transform: skewX(-15deg); /* 在水平方向上倾斜 -15 度 */
}
.bluecolor{
  color: blue;
}
.blackcolor{
  color: black;
}
.italic{
  font-size: large;
  font-style: italic;
}
.custom-margin{
	margin:5px 10px;
}
.user-avatar{
	width: 48px;
	height: 48px;
    display: block;
    position: relative;
    background-size: cover;
    border-radius: 50%;
    margin: 0;
    padding: 0;
}
.user-avatar-img{
	border-radius: 50%;
	border: none;
	display: block;
	width: 48px;
	height: 48px;
	object-fit: cover;
	image-rendering: -webkit-optimize-contrast;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    height: 100%;
}

}
.user-avatar{
	width: 48px;
	height: 48px;
    display: block;
    position: relative;
    //background-image: url("../../static/avs.png");
    background-size: cover;
    border-radius: 50%;
    margin: 0;
    padding: 0;
}
.user-avatar-img{
	border-radius: 50%;
	border: none;
	display: block;
	width: 48px;
	height: 48px;
	object-fit: cover;
	image-rendering: -webkit-optimize-contrast;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    height: 100%;
}

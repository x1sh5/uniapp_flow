
.newtaskbox{
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-content: flex-start;
		flex-wrap: wrap;
		align-items: flex-start;
		margin-left: 0px;
}
.task{
		z-index: 1;
}
.task::before {
		display: flex;
	  content: "";
	  position: absolute;
	  top: 0;
	  left: 0;
	  width: 100%;
	  height: 370rpx;
	  background: linear-gradient(to bottom, transparent 80%, rgba(-0.4, 0, 0.2, 0.4) 100%);
	  z-index: 3; /* 确保在元素之上 */
}
.editbutton{
		border: 1px solid bisque;
		color: darkgray;
}
.tasktype{
		 
			z-index: 1;
		display: flex;
	
			  justify-content: center;  
			  align-items: center; 
			  
			  z-index: 3;
			  bottom: 1rpx;
			  right: 1rpx;
			  font-size: 39rpx;
			  /*font-style: italic; 斜体 */
				   margin-top: 8rpx;
			  font-weight: 900;
			  color: #6c4ad1;
			  text-decoration: underline; /* 添加下划线 */
			  text-decoration-thickness: 15rpx; /* 设置下划线的粗细 */
}
	/* 分割线*/
.driver{
		z-index: 1;
		display: flex;
		position: absolute;
		display: block;
		height: 2rpx;
		width: 90%;
		background-color: #6c4ad1;
		
		margin-top: 10rpx;
}

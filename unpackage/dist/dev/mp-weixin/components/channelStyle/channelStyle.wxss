.rowlayout{
  display: flex;
  flex-direction: row;
}
.columnlayout{
  display: flex;
  flex-direction: column;
}
.bluecolor{
  color: blue;
}
.blackcolor{
  color: black;
}
.italic{
  font-size: large;
  font-style: italic;
}
.custom-margin{
	margin:5px 10px;
}
.user-avatar{
	width: 48px;
	height: 48px;
    display: block;
    position: relative;
    background-image: url("../../static/avs.png");
    background-size: cover;
    border-radius: 50%;
    margin: 0;
    padding: 0;
}
.user-avatar-img{
	border-radius: 50%;
	border: none;
	display: block;
	object-fit: cover;
	image-rendering: -webkit-optimize-contrast;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    height: 100%;
}
.ch-wrapper {
	  display: flex;
	  flex-direction: row;
	  padding: 13rpx 20rpx;
	  height: 90rpx;
}
.ch-wrapper > view {
	  display: flex;
	  align-items: center;
}
.ch-wrapper > view:nth-child(1) {
	  width: 80rpx;
}
.user-avatar {
	  width: 60rpx;
	  height: 60rpx;
	  border-radius: 50%;
	  overflow: hidden;
}
.user-avatar-img {
	  width: 100%;
	  height: 100%;
	  object-fit: cover;
}
.ch-wrapper > view:nth-child(2) {
	  display: flex;
	  flex-direction: column;
	  justify-content: space-between;
	  margin-left: 5rpx;
}
.ch-wrapper > view:nth-child(2) > view:nth-child(1) {
	  font-weight: bold;
	  text-align: left;
	  font-size: 32rpx;
}
.ch-wrapper > view:nth-child(2) > view:nth-child(2) {
	  font-size: 1rpx;
	  color: #999;
	text-align: left; /* 将内容左对齐 */
}
.ch-wrapper > view:nth-child(3) {
	  display: flex;
	  flex-direction: column;
	  align-items: flex-end;
	  justify-content: space-between;
	  margin-left: auto;
}
.ch-wrapper > view:nth-child(3) > view:nth-child(1) {
	  font-size: 8rpx;
	  color: #999;
	  text-align: right;
}
.ch-wrapper > view:nth-child(3) > view:nth-child(2) {
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  width: 33rpx;
	  height: 33rpx;
	  border-radius: 50%;
	  background-color: red;
	  font-size: 10rpx;
	  color: #fff;
	  margin-right: 5rpx;
}
